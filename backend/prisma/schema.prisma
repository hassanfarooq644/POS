// Prisma Schema for Inventory Management System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  email         String   @unique
  username      String   @unique
  password      String
  picture       String?
  address       String?
  city          String?
  state         String?
  gender        Gender?
  phoneNumber   String?
  role          UserRole @default(STAFF)
  isActive      Boolean  @default(true)
  isDeleted     Boolean  @default(false)
  
  // Audit fields
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @updatedAt
  createdBy     String
  updatedBy     String
  
  // Relations
  inventoryLogs       InventoryLog[]
  salesAsCustomer     Sale[]           @relation("CustomerSales")
  salesAsStaff        Sale[]           @relation("StaffSales")

  @@map("users")
}

model Category {
  id            String    @id @default(uuid())
  name          String    @unique
  
  // Audit fields
  createdAt     DateTime  @default(now())
  lastUpdatedAt DateTime  @updatedAt
  createdBy     String
  updatedBy     String
  
  // Relations
  products      Product[]

  @@map("categories")
}

model ItemType {
  id            String    @id @default(uuid())
  name          String    @unique
  
  // Audit fields
  createdAt     DateTime  @default(now())
  lastUpdatedAt DateTime  @updatedAt
  createdBy     String
  updatedBy     String
  
  // Relations
  products      Product[]

  @@map("item_types")
}

model Product {
  id                String   @id @default(uuid())
  itemName          String
  barcode           String   @unique
  quantity          Int      @default(0)
  company           String?
  wholesalePrice    Decimal  @db.Decimal(10, 2)
  retailPrice       Decimal  @db.Decimal(10, 2)
  description       String?  @db.Text
  shortDescription  String?
  picture           String?
  tax               Decimal  @default(0) @db.Decimal(5, 2)
  
  // Foreign keys
  categoryId        String
  itemTypeId        String
  
  // Audit fields
  createdAt         DateTime @default(now())
  lastUpdatedAt     DateTime @updatedAt
  createdBy         String
  updatedBy         String
  
  // Relations
  category          Category       @relation(fields: [categoryId], references: [id])
  itemType          ItemType       @relation(fields: [itemTypeId], references: [id])
  inventoryLogs     InventoryLog[]
  saleItems         SaleItem[]

  @@map("products")
}

model InventoryLog {
  id              String   @id @default(uuid())
  quantityChange  Int
  reason          String
  timestamp       DateTime @default(now())
  
  // Foreign keys
  productId       String
  userId          String
  
  // Audit fields
  createdAt       DateTime @default(now())
  lastUpdatedAt   DateTime @updatedAt
  createdBy       String
  updatedBy       String
  
  // Relations
  product         Product  @relation(fields: [productId], references: [id])
  user            User     @relation(fields: [userId], references: [id])

  @@map("inventory_logs")
}

model Sale {
  id              String     @id @default(uuid())
  totalAmount     Decimal    @db.Decimal(10, 2)
  saleDate        DateTime   @default(now())
  
  // Foreign keys
  customerId      String
  staffId         String
  
  // Audit fields
  createdAt       DateTime   @default(now())
  lastUpdatedAt   DateTime   @updatedAt
  createdBy       String
  updatedBy       String
  
  // Relations
  customer        User       @relation("CustomerSales", fields: [customerId], references: [id])
  staff           User       @relation("StaffSales", fields: [staffId], references: [id])
  saleItems       SaleItem[]

  @@map("sales")
}

model SaleItem {
  id              String   @id @default(uuid())
  quantitySold    Int
  priceAtSale     Decimal  @db.Decimal(10, 2)
  
  // Foreign keys
  saleId          String
  productId       String
  
  // Audit fields
  createdAt       DateTime @default(now())
  lastUpdatedAt   DateTime @updatedAt
  createdBy       String
  updatedBy       String
  
  // Relations
  sale            Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product         Product  @relation(fields: [productId], references: [id])

  @@map("sale_items")
}
